<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_userName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/tv_email_title"
                app:layout_constraintEnd_toEndOf="@+id/iv_profile_pic"
                app:layout_constraintStart_toStartOf="@+id/iv_profile_pic"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile_pic" />

            <ImageView
                android:id="@+id/iv_change_profile_pic"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_logout"
                app:layout_constraintEnd_toEndOf="@+id/iv_phone"
                app:layout_constraintStart_toStartOf="@+id/iv_phone"
                app:layout_constraintTop_toBottomOf="@+id/iv_phone"
                app:srcCompat="@drawable/ic_profile" />

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iv_change_profile_pic"
                app:layout_constraintStart_toStartOf="@+id/iv_change_profile_pic"
                app:layout_constraintTop_toBottomOf="@+id/iv_change_profile_pic"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_phone"
                app:layout_constraintEnd_toStartOf="@+id/iv_profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile_pic"
                app:srcCompat="@drawable/ic_email" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_change_profile_pic"
                app:layout_constraintEnd_toEndOf="@+id/iv_email"
                app:layout_constraintStart_toStartOf="@+id/iv_email"
                app:layout_constraintTop_toBottomOf="@+id/iv_email"
                app:srcCompat="@drawable/ic_phone" />

            <TextView
                android:id="@+id/tv_email_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="Email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_email"
                app:layout_constraintTop_toTopOf="@+id/iv_email" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/iv_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_title" />

            <TextView
                android:id="@+id/tv_phone_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="Phone Number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_phone"
                app:layout_constraintTop_toTopOf="@+id/iv_phone" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_phone"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_title" />

            <TextView
                android:id="@+id/tv_change_profile_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="Change Profile Picture"
                app:layout_constraintBottom_toBottomOf="@+id/iv_change_profile_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_change_profile_pic"
                app:layout_constraintTop_toTopOf="@+id/iv_change_profile_pic" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp"
                android:text="LogOut"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_logout"
                app:layout_constraintTop_toTopOf="@+id/iv_logout" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_swash_bold"
                android:text="You are not logged in yet."
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_swash_bold"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="@+id/tv_login"
                app:layout_constraintStart_toStartOf="@+id/tv_login"
                app:layout_constraintTop_toBottomOf="@+id/tv_login" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/gp_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="iv_phone,iv_email,tv_email,iv_change_profile_pic,iv_logout,iv_profile_pic,tv_phone_title,tv_change_profile_pic,tv_logout,tv_phone,tv_email_title,tv_userName"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/gp_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_login,btn_login" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>